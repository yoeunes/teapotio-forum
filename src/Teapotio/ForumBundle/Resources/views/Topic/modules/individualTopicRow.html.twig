{% extends "TeapotioBaseForumBundle:Topic:base/individualTopicRow.html.twig" %}

{% block row_class %}
  {% spaceless %}
    {% if current_board is defined and current_board is not null and current_board.children.count == 0 %}
      board-childless
    {% endif %}

    {% if topic.isPinned == true or topic.isLocked == true %}
      topic-moderated
    {% endif %}
  {% endspaceless %}
{% endblock %}